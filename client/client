#!/bin/bash
export DIRMAIN=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" && pwd )
source $DIRMAIN/config

while :
do
	watch -n 1 "socat tcp:localhost:$PORT - | tail -n $(($LINES - 2))"
	clear
	echo "newmsg:"
	read -r -e MAIN
	if [[ $MAIN == "!exit" ]];
	then
		exit
	else
		date "+%T" >> tmp
		echo -n "$NAME: " >> tmp
		echo "$MAIN" >> tmp
		echo "--------" >> tmp

		cat tmp | nc -w 1 $HOST $NCPORT < tmp
		rm -f tmp
	fi
done
